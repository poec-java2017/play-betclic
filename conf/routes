# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
GET		/login			                        SecureManager.login
POST    /login                                  SecureManager.authenticate
GET     /logout                                 SecureManager.logout

# Home page
GET     /                                       Application.index
GET     /sign-up                                RegisterManager.register
POST    /sign-up                                RegisterManager.signUp
POST    /sign-in                                UserManager.login
GET     /account                                UserManager.display
POST    /account/udpate                         UserManager.createOrUpdate
POST    /account/password                       UserManager.updatePassword
POST    /account/refill                         UserManager.accountRefill
POST    /account/withdraw                       UserManager.accountWithdraw
GET     /events                                 EventManager.events
POST    /bet                                    BetManager.bet

# Api routes
POST    /api/application/register               api.ApiClientManager.register
POST    /api/authenticate                       api.AuthenticationManager.authenticate
POST    /api/user/signin                        api.UserManager.signIn

# Testing purpose only : begin
POST    /api/operation/refill                   api.OperationManager.refill
POST    /api/operation/bet                      api.OperationManager.bet
POST    /api/operation/withdraw                 api.OperationManager.withdraw
POST    /api/bet                                api.BetManager.bet
# Testing purpose only : end

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Catch all
*       /{controller}/{action}                  {controller}.{action}
