# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
GET		/login			                        SecureManager.login
POST    /login                                  SecureManager.authenticate
GET     /logout                                 SecureManager.logout

# Home page
GET     /                                       Application.index
GET     /events                                 EventManager.events
POST    /bet                                    BetManager.bet
POST    /sign-in                                UserManager.login
GET     /account                                UserManager.display

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Catch all
*       /{controller}/{action}                  {controller}.{action}
